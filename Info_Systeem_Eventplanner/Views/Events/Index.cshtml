@model IEnumerable<Info_Systeem_Eventplanner.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h1>Events</h1>

<p>
    <a href="@Url.Action("Create", "Events")" class="btn btn-success">Create New Event</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                @* Controleer of het pad naar de afbeelding correct is *@
                <img src="~/images/@item.ImagePath" class="card-img-top" alt="@item.EventName">
                <div class="card-body">
                    <h5 class="card-title">@item.EventName</h5>
                    <p class="card-text">@item.EventDescription</p>
                    <p class="card-text">
                        <strong>Date:</strong> @item.DateTime.ToString("g")<br />
                        <strong>Max Participants:</strong> @item.MaxParticipants
                    </p>
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Details", "Events", new { id = item.EventID })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "Events", new { id = item.EventID })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Events", new { id = item.EventID })" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

